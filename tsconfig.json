{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "jsx": "react",
    "jsxFactory": "vscpp",
    "jsxFragmentFactory": "vscppf",
    "module": "ESNext",
    "moduleResolution": "node",
    "strictNullChecks": true,
    "types": ["node", "mocha"],
    "lib": ["ES2020", "DOM"],
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "webview",
    "src/**/__tests__/**",
    "src/tools/examples/**"
  ]
}
